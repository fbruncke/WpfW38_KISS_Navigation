<UserControl x:Class="WpfW38_KISS_Navigation.View.BlueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfW38_KISS_Navigation.View"
             mc:Ignorable="d" 
             Background="Blue"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center">
        <Label Content="The Blue page" Background="Pink"></Label>
        <TextBox Text="{Binding ID}" Width="200" Height="100" FontSize="25"></TextBox>        
        <Button x:Name="AddText" Width="200" Content="Add Text" Command="{Binding AddTextCMD}" ></Button>
        <Button x:Name="ChangePage" Width="200" Content="Change Page" Command="{Binding ChangePageCMD}" ></Button>
    </StackPanel>
</UserControl>
